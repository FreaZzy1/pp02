<UserControl x:Class="PP02_Cheremnykh.Elements.Car"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PP02_Cheremnykh.Elements"
             mc:Ignorable="d" 
             >
    <Grid Background="Gray">
        <StackPanel  >
            <Label x:Name="Name" Content="Имя:"  FontSize="14" Margin="10" Width="150" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Label x:Name="Marks" Content="Марка:"  FontSize="14" Margin="10" Width="150" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Label x:Name="Gos_Number" Content="Гос номер:"  FontSize="14" Margin="10" Width="150" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Label x:Name="Voditel" Content="Водитель:"  FontSize="14" Margin="10" Width="150" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Button x:Name="editButton" Content="Изменить" FontWeight="Bold" Foreground="White" BorderBrush="White" FontSize="16" Background="Black" Margin="5" VerticalAlignment="Top" Height="35"
 Width="110" Click="Click_Change" HorizontalAlignment="Left"/>
            <Button x:Name="deleteButton" Content="Удалить" FontWeight="Bold" Foreground="White" BorderBrush="White" FontSize="16" Background="Black" Margin="5" VerticalAlignment="Top" Height="35"
 Width="110" Click="Click_Delete" HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
</UserControl>

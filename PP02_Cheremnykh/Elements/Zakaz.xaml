<UserControl x:Class="PP02_Cheremnykh.Elements.Zakaz"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PP02_Cheremnykh.Elements"
             mc:Ignorable="d" 
             >
    <Grid Background="Gray">

        <StackPanel  >
            <Label x:Name="Object" Content="Объект:"  FontSize="14" Margin="10" Width="150" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Label x:Name="Time" Content="Время работы:"  FontSize="14" Margin="10" Width="150" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Label x:Name="Price" Content="Цена:"  FontSize="14" Margin="10" Width="150" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Label x:Name="Voditel_Id" Content="Водитель:"  FontSize="14" Margin="10" Width="150" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Label x:Name="Car_Id" Content="Машина:"  FontSize="14" Margin="10" Width="150" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        </StackPanel>
    </Grid>
</UserControl>
